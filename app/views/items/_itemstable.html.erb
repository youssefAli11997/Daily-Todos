<table>
  <thead>
    <tr>
      <!--<th>Done</th>-->
      <!--<th>Associated date</th>-->
      <th>Summary</th>
      <th>Description</th>
      <th colspan="4"></th>
      <% if defined? date == nil && (date != DateTime.now.strftime("%Y/%m/%d")) %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <!--<td><%= item.done %></td>-->
        <!--<td><%= item.associated_date %></td>-->
        <td><%= item.summary[0..30] %> <%= '...' if item.summary.size > 31 %></td>
        <td><%= item.description[0..30] %> <%= '...' if item.description.size > 31 %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Toggle', item_toggle_path(item) %>
        <% if !((defined?(passed_date)).nil?) && (passed_date != DateTime.now.strftime("%Y/%m/%d")) %>
        <%= link_to 'Todo today!', item_todo_today_path(item) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>